# Server Configuration
ENVIRONMENT=PROD

GOARCH=arm64
GOOS=darwin

PORT=8400
LOGLEVEL=info
LOGFILE=/lister/log/poptape_lister.log
LOCAL_LOG_LOC=~/Library/Logs

VERSION=v1.0.0

# MongoDB Configuration
MONGO_HOST=poptape-lister-redux-mongodb-1
MONGO_PORT=27017
MONGO_USERNAME=lister_user
MONGO_PASSWORD=lister_password
MONGO_DATABASE=poptape_lister
MONGO_URI=mongodb://lister_user:lister_password@poptape-lister-redux-mongodb-1:27017/poptape_lister?authSource=admin

AUTHYURL=http://myauthyurl:8200/authy/checkaccess/10

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s

# Application Configuration
MAX_LIST_SIZE=50
DEFAULT_LIST_SIZE=25