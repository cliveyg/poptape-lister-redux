# Server Configuration
PORT=8400
LOGLEVEL=info
LOGFILE=/root/log/lister.log
VERSION=v0.1.0

# MongoDB Configuration
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USERNAME=lister_user
MONGO_PASSWORD=lister_password
MONGO_DATABASE=poptape_lister

# Authentication Configuration (for production)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=24h
AUTHYURL=http://localhost:8200

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s

# Application Configuration
MAX_LIST_SIZE=50
DEFAULT_LIST_SIZE=25